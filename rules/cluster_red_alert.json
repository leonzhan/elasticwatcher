{
  "trigger": {
    "schedule": {
      "interval": "5m"
    }
  },
  "name": "cluster_red_alert",
  "type": "blacklist",
  "input": {
    "search": {
      "request": {
        "indices": ".marvel-es-1-*",
        "types": "cluster_state",
        "body": {
          "query": {
            "bool": {
              "filter": [
                {
                  "range": {
                    "timestamp": {
                      "gte": "now-2m",
                      "lte": "now"
                    }
                  }
                },
                {
                  "terms": {
                    "cluster_state.status": ["green", "yellow", "red"]
                  }
                }
              ]
            }
          },
          "_source": [
            "cluster_state.status"
          ],
          "sort": [
            {
              "timestamp": {
                "order": "desc"
              }
            }
          ],
          "size": 1,
          "aggs": {
            "minutes": {
              "date_histogram": {
                "field": "timestamp",
                "interval": "5s"
              },
              "aggs": {
                "status": {
                  "terms": {
                    "field": "cluster_state.status",
                    "size": 3
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare_key": "cluster_state.status",
    "blacklist": ["yellow", "red"]
    
  },
  "actions": {
    "pagerduty": { 
      "pagerduty_service_key": "6d831a19f9fa48db942cfd5ac8d69418",
      "pagerduty_client_name": "int-elastic-alert"
    }
  }
}